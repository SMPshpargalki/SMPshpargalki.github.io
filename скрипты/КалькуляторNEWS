// ===== Калькулятор NEWS =====
function updateNEWS() {
  let total = 0;

  document.querySelectorAll("[data-score]").forEach(select => {
    const score = Number(select.value || 0);
    total += score;

    const scoreSpan = document.getElementById(select.id + "Score");
    if (scoreSpan) scoreSpan.textContent = score;
  });

  const totalBlock = document.getElementById("newsTotal");
  if (totalBlock) {
    totalBlock.textContent = "Сумма баллов: " + total;
  }
}

// отслеживаем изменения только внутри NEWS
document.addEventListener("change", e => {
  if (e.target && e.target.hasAttribute("data-score")) {
    updateNEWS();
  }
});